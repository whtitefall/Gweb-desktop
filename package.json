{
  "name": "graphnote-desktop",
  "version": "0.1.0",
  "description": "Desktop shell for GraphNote",
  "main": "electron/main.js",
  "author": "Yuanzheng Hu",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "dist:win": "electron-builder --win nsis",
    "dist:portable": "electron-builder --win portable"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.graphnote.desktop",
    "productName": "GraphNote Desktop",
    "directories": {
      "output": "release"
    },
    "files": [
      "electron/**/*",
      "package.json",
      "README.md"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    }
  }
}
